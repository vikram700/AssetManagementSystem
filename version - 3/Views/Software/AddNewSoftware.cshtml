@model Software

<link rel="stylesheet" href="~/css/Software/AddNewSoftware.css">

<div class="container">
    <div class="jumbotron">
        <form class="form" asp-controller="Software" asp-action="AddNewSoftware" method="POST">
            <div class="form-group">
                <label asp-for="SoftwareName">Software Name</label>
                <input type="text" class="form-control" asp-for="SoftwareName" placeholder="Enter Software Name" >
                <span asp-validation-for="SoftwareName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoftwareCompany" >Software Company Name</label>
                <input type="text" class="form-control" asp-for="SoftwareCompany" placeholder="Software Company Name" >
                <span asp-validation-for="SoftwareCompany" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="AssetPrice" >Software Price $</label>
                <input class="form-control" asp-for="AssetPrice" placeholder="Price" >
                <span asp-validation-for="AssetPrice" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
</div>
