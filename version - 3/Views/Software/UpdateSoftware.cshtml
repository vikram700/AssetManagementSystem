@model Software

<link rel="stylesheet" href="~/css/Software/UpdateSoftware.css">

<div class="container">
    <div class="jumbotron">
        <form class="form" asp-controller="Software" asp-action="UpdateSoftware" asp-route-id="@Model.AssetId" method="POST">
            <div class="form-group">
                <label asp-for="SoftwareName" >Software Name</label>
                <input type="text" class="form-control" asp-for="SoftwareName" value="@Model.SoftwareName"  placeholder="Enter Software Name" >
                <span asp-validation-for="SoftwareName"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoftwareCompany" >Software Company Name</label>
                <input type="text" class="form-control" asp-for="SoftwareCompany" value="@Model.SoftwareCompany"  placeholder="Software Company Name" >
                <span asp-validation-for="SoftwareCompany"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="AssetPrice">Software Price $:</label>
                <input class="form-control" asp-for="AssetPrice" value="@Model.AssetPrice" placeholder="Price" >
                <span asp-validation-for="AssetPrice"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
</div>